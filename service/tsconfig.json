		"jsx": "react",
		"baseUrl": "./src",
		"experimentalDecorators": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
